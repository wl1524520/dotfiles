# zshrc/bashrc ext profile

setopt no_nomatch

alias w='w -i'

if type nvim > /dev/null 2>&1; then
    alias vim='nvim'
    alias vi='nvim'
else
    alias vi='vim'
fi

alias cdc='cd /mnt/c'
alias cdd='cd /mnt/d'
alias cde='cd /mnt/e'

export GOPATH=~/go
export VISUAL="vim"
export TERM=xterm-color
export NODE_MIRROR=https://mirrors.tuna.tsinghua.edu.cn/nodejs-release/
export PATH=$PATH:$HOME/.bin
